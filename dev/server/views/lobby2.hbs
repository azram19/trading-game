<div id='main' class='container lobby2'>
  <div class='row'>
    <div class='span2'>
      <div>
        <ul class='tickers'>
          <li></li>
          <li></li>
          <li></li>
          <li></li>
          <li></li>
          <li></li>
          <li></li>
          <li></li>
          <li></li>
          <li></li>
        </ul>
        <div class='row-fluid userScore'>
          
        </div>
        <div class='row-fluid ranking'>
        <ul>
            
          </ul>
        </div>
        <div class='row-fluid userScoreZero'>
          0
        </div>
      </div>
    </div>
    <div class='span10'>
      <div class='row-fluid'>
        <div class='span8'>
          <div class='row-fluid header'>
            <div class='span6 player'>
              <div class='avatar'>
                <img src='http://graph.facebook.com/robert3005/picture/'/>
              </div>
              <h1>{{everyauth.user.name}}</h1>
            </div>
            <div class='span6 menu'>
              <ul>
                <li class='active'>
                  <a class="withTooltip" title="The Game" href="#gameMenu" data-toggle="tab"><i class="icon-fire"></i></a>
                </li>
                <li>
                  <a class="withTooltip" title="History" href="#history" data-toggle="tab"><i class="icon-book"></i></a>
                </li>
                <li>
                 <a class="withTooltip" title="Highgscores" href="#highscrores" data-toggle="tab"><i class="icon-bar-chart"></i></a>
                </li>
              </ul>
            </div>
          </div>
          <div class='row-fluid'>
            <div class='span12 tab-content'>
              <div class='tab-pane' id='history'>

              </div>
              <div class='tab-pane' id='highscores'>

              </div>
              <div class='tab-pane active games' id='gameMenu'>
                {{#each games}}
                  {{#with this}}
                    <div class='row-fluid'>
                      <div class='span6 game'>
                          <div class='name'>
                            <h3>{{name}}</h3>
                            <span>
                              <span class='number'>{{playersConnected}}</span>/{{playersRequried}}
                            </span>
                          </div>
                          <div class='meta'>
                            <span class='gameType'>
                              {{typeData.name}}
                            </span>
                          </div>
                      </div>
                      <div class='span6 options'>
                        <a class='btn playBtn' data-id='{{name}}' href='/game/{{name}}/join'>Play</a>
                      </div>
                    </div>
                  {{/with}}
                {{/each}}
              </div>
            </div>
          </div>
        </div>
        <div class='span4'>
          <div id='chat'>
            <div class='nano'>
              <ul class="content">
              </ul>
            </div>
            <textarea></textarea>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
